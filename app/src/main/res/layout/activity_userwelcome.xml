<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserwelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="202dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/liulan"
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:background="@mipmap/liulan"
            android:text="活动浏览"
            android:textColor="@color/colortext"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/zhinengtuijian"
            android:layout_width="193dp"
            android:layout_height="match_parent"
            android:background="@mipmap/zhineng"
            android:text=" 志愿者官网"
            android:textColor="@color/colortext"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"

        android:layout_alignParentTop="true"

        android:layout_marginTop="337dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/wodezy"
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:background="@mipmap/wodexin"
            android:text="我的志愿"
            android:textColor="@color/colortext"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sousuo"
            android:layout_width="193dp"
            android:layout_height="match_parent"
            android:background="@mipmap/searchxin"
            android:text="更多了解"
            android:textColor="@color/colortext"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@mipmap/zyzlogo" />

</RelativeLayout>