<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">

    <Button
        android:id="@+id/sousuobtn"
        android:layout_width="165dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:text="search" />

    <Button
        android:id="@+id/weatherbtn"
        android:layout_width="165dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="169dp"
        android:layout_marginLeft="169dp"
        android:layout_marginTop="156dp"
        android:text="Weather help" />

    <Button
        android:id="@+id/button6"
        android:layout_width="165dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="313dp"
        android:text="更多功能 敬请期待" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="229dp"
        android:text="你的天气助手→"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="184dp"
        android:text="户外志愿活动？"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginStart="176dp"
        android:layout_marginTop="-154dp"
        android:text="注：天气数据来源于网络      （中国天气网）" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weatherbtn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        app:srcCompat="@mipmap/search" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView11"
        android:layout_marginEnd="-169dp"
        android:layout_toStartOf="@+id/weatherbtn"
        app:srcCompat="@mipmap/weather" />

</RelativeLayout>