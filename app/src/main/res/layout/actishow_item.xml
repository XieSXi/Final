<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".orghuodongChakanActivity">




            <LinearLayout
                android:id="@+id/ll_loginactivity_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_loginactivity_top"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0.1dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">



                <RelativeLayout
                    android:id="@+id/rl_loginactivity_top"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/zyimage"
                        android:layout_width="match_parent"
                        android:layout_height="178dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/gaokaozy" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="志愿活动："
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/et_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="校园公益行"
                        android:textSize="20dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <TextView
                                android:id="@+id/yue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1月"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/ri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2日"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/shi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24时"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/fen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00分"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="报名截止！"
                                android:textSize="20dp" />
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/chakan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="浏览更多信息？查看详情→"
                            android:textSize="20dp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


</RelativeLayout>